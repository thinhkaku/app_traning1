    <style name="StyleLoginButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/transparent_button_login</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleMetroButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/metro_ui_button_background</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/mcc_color_login_screen</item>
    </style>

    <style name="StyleEditTextLoginScreen">
        <item name="android:textColor">@color/mcc_color_login_screen</item>
        <item name="android:textColorHint">@color/mcc_color_login_screen_hint</item>
        <item name="android:textSize">@dimen/size_text_route_small</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">@dimen/login_padding_top_bottom_edittext</item>
        <item name="android:paddingBottom">@dimen/login_padding_top_bottom_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StyleTextViewLoginScreen">
        <item name="android:textColor">@color/mcc_color_login_screen</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_text_route_small</item>
    </style>

    <style name="AppCompatAlertDialogStyleTranlucent" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!--<item name="android:background">@color/mcc_cyan</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlActivated">@color/mcc_cyan</item>
        <item name="colorControlHighlight">@color/mcc_cyan</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
