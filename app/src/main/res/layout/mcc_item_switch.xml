<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/margin_left_right"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTitle"
                style="@style/ItemSettingFormatTitle2"
                android:text="title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView android:visibility="gone"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:id="@+id/tvDescription"
                style="@style/StyleTextDescription"
                android:text="description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView android:visibility="gone"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:id="@+id/tvFootNote"
                style="@style/StyleTextFootnote"
                android:text="footNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RadioGroup
                android:layout_marginTop="@dimen/margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rbLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector_radius_left"
                    android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                    android:textColor="@color/mcc_cyan" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rbCenter"
                    android:layout_marginLeft="-1dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector_no_radius"
                    android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                    android:textColor="@color/mcc_cyan" />
                <android.support.v7.widget.AppCompatRadioButton
                    android:layout_marginLeft="-1dp"
                    android:id="@+id/rbRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_selector_radius_right"
                    android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
                    android:textColor="@color/mcc_cyan" />

            </RadioGroup>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider" />
</LinearLayout>