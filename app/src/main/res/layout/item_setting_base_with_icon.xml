<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_weight="0.9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemSettingFormatTitle2"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/txt_setting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/margin_left_right"
            android:minLines="1"
            android:layout_marginRight="@dimen/margin_right_footnote"
            style="@style/ItemSettingFormatDescriptionExtra2"/>

        <TextView
            android:id="@+id/txt_setting_footNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/margin_left_right"
            android:minLines="1"
            android:layout_marginRight="@dimen/margin_right_footnote"
            android:layout_below="@+id/txt_setting_description"
            style="@style/ItemSettingFormatFootNode" />
        <TextView
            android:id="@+id/txt_setting_footNote_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_left_right"
            android:paddingRight="@dimen/margin_left_right"
            android:text=""
            android:layout_marginLeft="@dimen/margin_left_right"
            android:minLines="1"
            android:visibility="gone"
            android:textColor="@color/background_white"
            android:layout_marginRight="@dimen/margin_right_footnote"
            android:layout_below="@+id/txt_setting_footNote"
            style="@style/ItemSettingFormatFootNode" />
    </LinearLayout>
   <LinearLayout
       android:layout_marginTop="5dp"
       android:layout_width="0dp"
       android:layout_height="match_parent"
       android:layout_weight="0.1"
       android:gravity="center|right">
       <ImageView
           android:id="@+id/ib_setting_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"/>
   </LinearLayout>
</LinearLayout>
    <View
        android:id="@+id/profile_line"
        android:layout_width="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_height="1dp"
        android:background="@color/grey_divider"/>
</LinearLayout>

