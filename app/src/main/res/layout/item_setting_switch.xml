<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:minHeight="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_setting_title"
            style="@style/ItemSettingFormatTitle2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="@dimen/margin_right_footnote"/>
        <Switch
            android:id="@+id/switch_setting_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/switch_thumb_cyan"
            android:layout_below="@id/txt_setting_title"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            style="@style/ItemSettingFormatDescriptionExtra2"
            android:text="" />

        <TextView android:visibility="gone"
            android:id="@+id/txt_setting_footNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:minLines="1"
            android:gravity="left"
            android:layout_below="@+id/switch_setting_description"
            android:layout_alignLeft="@+id/switch_setting_description"
            android:layout_alignStart="@+id/switch_setting_description"
            android:layout_marginLeft="@dimen/margin_left_right"
            android:layout_marginRight="@dimen/margin_left_right"
            style="@style/ItemSettingFormatFootNode"
            />
        <View
            android:layout_marginTop="@dimen/margin_left_right"
            android:id="@+id/profile_line"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@color/grey_divider"/>
    </LinearLayout>

</LinearLayout>