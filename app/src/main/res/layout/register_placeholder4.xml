<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/ll_placeholder_register_step_four"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/StyleTextViewLoginScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_all_done"
            android:layout_marginBottom="@dimen/margin_top_bottom" />
        <View
            android:background="@color/mcc_color_login_screen"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:layout_marginBottom="@dimen/login_margin_top_bottom"
            style="@style/StyleTextViewLoginScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_video_tour" />
        <LinearLayout
            android:id="@+id/lnWatchVideo"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/login_margin_top_bottom"
                android:gravity="center"
                android:layout_gravity="center">
                <aero.pilotlog.widgets.CircleImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:civ_border_width="1dp"
                    android:src="@color/mcc_color_login_screen"
                    app:civ_border_color="@color/mcc_color_login_screen"/>
                <aero.pilotlog.widgets.CircleImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:civ_border_width="1dp"
                    android:src="@color/mcc_color_login_screen"
                    app:civ_border_color="@color/mcc_color_login_screen"
                    android:layout_marginLeft="10dp"/>
                <aero.pilotlog.widgets.CircleImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:civ_border_width="1dp"
                    android:src="@color/mcc_color_login_screen"
                    app:civ_border_color="@color/mcc_color_login_screen"
                    android:layout_marginLeft="10dp"/>
                <aero.pilotlog.widgets.CircleImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:civ_border_width="1dp"
                    android:src="@color/mcc_color_login_screen"
                    app:civ_border_color="@color/mcc_color_login_screen"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnWatchVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_weight="1"
                    android:text="Watch Video"
                    android:layout_marginRight="@dimen/margin_left_right"
                    style="@style/StyleLoginButton"/>
                <Button
                    android:id="@+id/btnNoThanks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/margin_left_right"
                    android:layout_weight="1"
                    android:text="No, thanks"
                    style="@style/StyleLoginButton"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>