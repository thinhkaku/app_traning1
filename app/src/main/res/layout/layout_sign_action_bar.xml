<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sign_action_bar_height"
    android:background="@color/mcc_cyan"
    android:gravity="center_vertical">
    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sign_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_action_bar_button"
            android:drawableLeft="@drawable/ic_cancel_white"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="@android:color/white"
            android:textSize="@dimen/action_bar_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/background_white" />

        <TextView
            android:id="@+id/tv_sign_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="3dp"
            android:background="@drawable/bg_action_bar_button"
            android:drawableLeft="@drawable/ic_check_white"
            android:drawablePadding="13dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:textSize="@dimen/action_bar_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <View
            android:layout_width="@dimen/sign_view_width"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/sign_padding"
            android:layout_marginTop="@dimen/sign_padding"
            android:background="@color/mcc_blue" />

        <TextView
            android:id="@+id/tv_sign_set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_action_bar_button"
            android:drawableLeft="@drawable/btn_calendar"
            android:drawablePadding="@dimen/sign_padding"
            android:gravity="center_vertical"
            android:padding="@dimen/sign_padding"
            android:text="@string/sign_text_calendar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sign_title_text_size" />

    </LinearLayout>
</LinearLayout>
