<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_help"
        android:layout_marginTop="@dimen/margin_help"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:padding="@dimen/padding_item_menu">
        <ImageView
            android:id="@+id/iconLeft"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.12"
            android:src="@drawable/ic_icon_unlocked_grey" />
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_title_item_menu"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setting_general"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/ItemSettingFormatTitle2"/>

            <TextView
                android:id="@+id/txt_setting_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/setting_general_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                style="@style/ItemSettingFormatDescriptionExtra2" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconRight"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.12"/>
    </LinearLayout>
    <View
        android:id="@+id/setting_line"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="@color/grey_divider"/>
</LinearLayout>
