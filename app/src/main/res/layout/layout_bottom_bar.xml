<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_bottom_bar"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/bg_bottom_bar"
    android:weightSum="4"
    android:id="@+id/rlBottomBar">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_bottom1"
            android:layout_width="@dimen/width_button_bar"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_add" />
    </RelativeLayout>


    <RelativeLayout android:id="@+id/ln_bottom2"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_bottom2"
            android:layout_width="@dimen/width_button_bar"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_return" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_bottom3"
            android:layout_width="@dimen/big_width_button_bar"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_sort"
            android:paddingBottom="@dimen/padding_button_sort"
            android:text="@string/text_type"
            android:layout_centerInParent="true"
            android:textColor="@color/color_text_sort"
            android:textSize="@dimen/size_text_button_bar" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_bottom4"
            android:layout_width="@dimen/width_button_bar"
            android:layout_centerInParent="true"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_delete" />
    </RelativeLayout>


    <RelativeLayout android:id="@+id/ln_bottom5"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_bottom5"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/width_button_bar"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_select" />
    </RelativeLayout>

</LinearLayout>