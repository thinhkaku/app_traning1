<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:minHeight="40dp"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_setting_title"
        style="@style/ItemSettingFormatTitle2"
        android:layout_marginRight="@dimen/margin_right_footnote"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/switch_setting_description"
        style="@style/ItemSettingFormatDescriptionExtra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_right"

        android:thumb="@drawable/switch_thumb_cyan" />
    <TextView android:id="@+id/tvFootNote"
        android:visibility="gone"
        style="@style/ItemSettingFormatFootNode"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout android:id="@+id/ln_footnote"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_only_PF"
            android:layout_marginLeft="-5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ItemSettingFormatDescriptionExtra2"
            android:layout_gravity="left|center_vertical"/>
    </LinearLayout>

    <View android:layout_marginTop="@dimen/margin_left_right"
        android:id="@+id/profile_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_divider" />
</LinearLayout>
