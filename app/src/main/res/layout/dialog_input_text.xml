<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/custom_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mcc_cyan"
        android:padding="@dimen/padding_top_bottom_title_dialog"
        android:layout_marginBottom="@dimen/padding_top_bottom_title_dialog_text">
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/background_white"
            android:textSize="@dimen/text_size_title_dialog"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>


    <aero.pilotlog.widgets.MccEditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true" />
</LinearLayout>